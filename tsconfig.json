{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": "./src",
    "rootDirs": ["src", "stories"],

    "noImplicitAny": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "lib": ["dom", "es2016"],
    "outDir": "./dist/",
    "sourceMap": true,

    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "types" : ["mocha"]
}